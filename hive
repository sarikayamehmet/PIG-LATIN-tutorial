https://cwiki.apache.org/confluence/display/Hive/GettingStarted#GettingStarted-RunningHive
hive commands:
--launch hive using:
hive;
--exit hive using
exit/quit;

--show tables:
SHOW TABLES;

--drop table:
DROP TABLE Tbl_name;

--Create table:
CREATE TABLE CTR (
id STRING,
click STRING,
hour STRING,
C1 STRING,
banner_pos STRING,
site_id STRING,
site_domain STRING,
site_category STRING,
app_id STRING,
app_domain STRING,
app_category STRING,
device_id STRING,
device_ip STRING,
device_model STRING,
device_type STRING,
device_conn_type STRING,
C14 STRING,
C15 STRING,
C16 STRING,
C17 STRING,
C18 STRING,
C19 STRING,
C20 STRING,
C21 STRING)
ROW FORMAT DELIMITED
FIELDS TERMINATED BY ','
STORED AS TEXTFILE;

-- load data into CTR table
 LOAD DATA LOCAL INPATH '/home/poc_ops/train_CTR.csv' OVERWRITE INTO TABLE CTR;
